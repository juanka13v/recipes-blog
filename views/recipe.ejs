<% if(recipe != null) {%>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item " >
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <a href="/"><%- recipe.name %></a>
            </li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-12 col-md-4">
            <img src="<%- recipe.image %>" loading="lazy" alt="<%- recipe.name %>" style="top: 20px;" class="img-fluid sticky-top">
        </div>

        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12"><h3><%- recipe.name %></h3></div>
                <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- recipe.category %></div>
                <div class="col-12" style="white-space: pre-line;">
                    <h4>Cooking Instructions</h4>
                    <%- recipe.description %>
                </div>
            </div>
        </div>

        <div class="row pt-4">
            <div class="col-12">
                <h4>Ingredients</h4>
                <ul class="list-group list-group-flush">
                    <% recipe.ingredients.forEach(function(ingredient,index){ %>
                        <li class="list-group-item">
                            <%= ingredient %>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>

<% } else { %>
    <p>No item found.</p>
<% } %>
